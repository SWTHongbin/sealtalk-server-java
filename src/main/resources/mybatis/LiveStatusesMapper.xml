<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tele.goldenkey.dao.LiveStatusesMapper">

    <resultMap id="BaseResultMap" type="com.tele.goldenkey.domain.LiveStatuses">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="status" jdbcType="INTEGER" property="status"/>
        <result column="createdAt" jdbcType="TIMESTAMP" property="createdAt"/>
        <result column="updatedAt" jdbcType="TIMESTAMP" property="updatedAt"/>
    </resultMap>


    <select id="findByLivedId" resultMap="BaseResultMap" parameterType="map">
        select *
        from live_statuses
        WHERE liveId = #{livedId}
        ORDER BY createdAt desc LIMIT 0,1
    </select>

    <select id="noLongerUsed" resultMap="BaseResultMap">
        select code, id, liveId
        from live_statuses
        WHERE updatedAt &lt; DATE_ADD(now(), INTERVAL - 30 DAY)
    </select>

    <update id="closeByLivedId" parameterType="map">
        UPDATE live_statuses
        set `status` =0,
            `count`=0,
            startTime=null
        WHERE liveId = #{livedId}
    </update>

    <update id="openByLivedId" parameterType="map">
        UPDATE live_statuses
        set `status` =1,
            `count`=1,
            startTime=now()
        WHERE liveId = #{livedId}
    </update>

    <update id="updateCount" parameterType="map">
        UPDATE live_statuses
        set `count`=`count` + #{num}
        WHERE liveId = #{livedId}
    </update>

</mapper>